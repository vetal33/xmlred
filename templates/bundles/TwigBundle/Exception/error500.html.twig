{% extends 'base.html.twig' %}

{% block content %}
    <div class="content-wrapper">
        <section class="content-header">
        </section>
        <section class="content">
            <div class="error-page">
                <h2 class="headline text-danger"> {{ status_code }}</h2>
                <div class="error-content pt-4">
                    <h3><i class="fas fa-exclamation-triangle text-danger"></i> Виникла критична помилка.</h3>
                    <p>
                        {% if  exception.code > 0 or is_granted('ROLE_ADMIN') %}
                            {{ exception.message }}
                        {% else %}
                            {{ status_text }}
                        {% endif %}
                    </p>
                </div>
            </div>
        </section>
    </div>
{% endblock %}